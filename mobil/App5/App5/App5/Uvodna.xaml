<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Uvodna"
             NavigationPage.HasNavigationBar="False"
             BackgroundImage="download.jpg">
    <ContentPage.Content>
        <StackLayout
            Margin="10,35,10,10">
            <Label Text="Nečakáreň"
               HorizontalOptions="Center"
               FontAttributes="Bold" 
                   FontSize="Large"
                   TextColor="#545456"/>

            <Label Text="Doba čakania"  />
                <Editor x:Name="cas"  IsEnabled="False"/>



            <Button BackgroundColor="#545456"
                    TextColor="White"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                    Opacity="0.8"
                x:Name="objednaj"
                Text="Objednať"
                    Clicked="OnSendButtonClicked" />

            <Button BackgroundColor="#545456"
                    TextColor="White"
Opacity="0.8"
                x:Name="doktor"
                Text="Stránka pre doktora"
                    Clicked="OnDoktorButtonClicked" Grid.Column="1"/>






        </StackLayout>
    </ContentPage.Content>
</ContentPage>
