<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.MainPage">
    <ScrollView>
        <StackLayout Margin="10,35,10,10">
            <Label Text="Pocet cakajucich"  />
            <Editor x:Name="pocet"  IsEnabled="false"/>
            <Label Text="Id"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
        <Editor x:Name="id"
                Placeholder="Zadajte svoje id"
                HeightRequest="50" />
        <Picker x:Name="picker"
        Title="Zvolte druh vysetrenia"  SelectedIndexChanged="SelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Byrokracia</x:String>
                    <x:String>Osetrenie</x:String>
                  
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label Text="Cas dokial pridete"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
        <Editor x:Name="travel_time"
                Placeholder="Zadajte dlzku cesty"
                HeightRequest="50" />
            <Label Text="E-mail"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
            <Editor x:Name="email"
                Placeholder="Zadajte svoj e-mail"
                HeightRequest="50" />
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button 
                BackgroundColor="#840d46" 
                    TextColor="White"                
                Text="Objednaj"
                    Clicked="OnSendButtonClicked" />
            
        </Grid>
       
    </StackLayout>
    </ScrollView>
</ContentPage>