<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.DoctorPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,35,10,10">

                <Button 
                BackgroundColor="#840d46" 
                    TextColor="White"                
                Text="Privolať ďalšieho pacienta"
                    Clicked="OnSendButtonClicked" />
                <Label Text="ID ďalšieho pacienta je:"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
                <Editor x:Name="id"
                IsEnabled="False"
                HeightRequest="50" 
                        VerticalOptions="Center"/>

                <Button 
                BackgroundColor="#840d46" 
                    TextColor="White"                
                Text="Objednať pacienta"
                    Clicked="OnScheduleButtonClicked"/>
            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>