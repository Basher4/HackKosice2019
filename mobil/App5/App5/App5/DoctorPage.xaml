<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.DoctorPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,35,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button 
                BackgroundColor="#840d46" 
                    TextColor="White"                
                Text="Privolat dalsieho pacienta"
                    Clicked="OnSendButtonClicked" />
                    <Button 
                BackgroundColor="#840d46" 
                    TextColor="White"                
                Text="Objednat pacienta"
                    Clicked="OnScheduleButtonClicked" />
                </Grid>
                <Label Text="ID dalsieho pacienta je:"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
                <Editor x:Name="id"
                IsEnabled="False"
                HeightRequest="50" 
                        VerticalOptions="Center"/>
            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>