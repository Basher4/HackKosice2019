<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.SchedulePage"
             BackgroundImage="download.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Čas objednávky" 
                   TextColor="#545456"/>
            <TimePicker x:Name="timePicker"
                    Time="11:00:00"
                    Format="T"
                     />
            <Label Text="ID"
                   TextColor="#545456"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
            <Editor x:Name="id"
                Placeholder="Zadajte ID pacienta"
                HeightRequest="50" />
            <Button 
                BackgroundColor="#545456" 
                    TextColor="White"                
                Text="Objednať"
                Opacity="0.8"
                    Clicked="OnScheduleButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>